    { device = "/dev/disk/by-uuid/758664ba-5ad9-4f2c-8ff9-11c40d830a45";
      fsType = "btrfs";
      options = [ "subvol=snapshots" "compress-force=zstd:3" "noatime"  ];
    };

  fileSystems."/boot" =
    { device = "/dev/disk/by-uuid/1030-50F5";
      fsType = "vfat";
